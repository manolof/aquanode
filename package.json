{
  "name": "aquanode-server",
  "description": "aquanode-server",
  "repository": "github:manolof/aquanode-server",
  "version": "0.0.0",
  "license": "MIT",
  "engines": {
    "node": "^10.0.0",
    "npm": "^6.0.0"
  },
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --forceExit --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "build:prod": "tsc",
    "start:prod": "pm2 start ecosystem.config.js",
    "start:dev": "cross-env NODE_ENV=development ./node_modules/nodemon/bin/nodemon.js -e ts -w ./src -x \"ts-node src/server.ts\"",
    "lint": "tslint src/**/*.ts --fix"
  },
  "dependencies": {
    "ds18b20": "^0.1.0",
    "firebase-admin": "^6.1.0",
    "node-schedule": "^1.3.0",
    "socket.io": "^2.1.1",
    "typescript": "^3.1.6",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.8",
    "@types/node-schedule": "^1.2.2",
    "@types/socket.io": "^2.1.0",
    "@types/winston": "^2.4.4",
    "cross-env": "^5.2.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.6",
    "pigpio-mock": "^0.0.1",
    "socket.io-client": "^2.1.1",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0"
  },
  "optionalDependencies": {
    "pigpio": "^1.1.2"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(\\.|/)(test|spec)\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html",
      "text-summary"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/app.ts",
      "<rootDir>/src/server.ts",
      "<rootDir>/src/logger.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts}"
    ]
  }
}
